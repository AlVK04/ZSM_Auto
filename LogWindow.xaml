<Window x:Class="Automatization.LogWindow"
        WindowStartupLocation="Manual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Automatization"
        mc:Ignorable="d"
        Title="Выполнение..." Height="469" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="ProcessLog" HorizontalAlignment="Center" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" Width="280" Height="391" 
                 Margin="0,10,0,0" FontFamily="Roboto Condensed" FontSize="14"
            />
        <Button Content="Остановить операцию" HorizontalAlignment="Center" 
                Margin="0,415,0,0" VerticalAlignment="Top" Width="137" Click="Button_Click"/>

    </Grid>
</Window>
